@model Csiro.ViewModels.RegisterViewModel

<div class="registration-box">
    <div class="row">
        <div class="col-12">
            <form method="post">
                <center>
                    <img width="150" src="/images/sign_up.png" />
                    <h2>Create a New Account</h2>
                </center>

                <hr />

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-floating mb-3">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control" aria-required="true" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" aria-required="true" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" aria-required="true" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>


                <div class="form-floating mb-3">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" aria-required="true" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" aria-required="true" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <label class="col-form-label" asp-for="PhoneNumber"></label>
                    <input type="text" asp-for="PhoneNumber" class="form-control" aria-required="false" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <label class="col-form-label" asp-for="Address"></label>
                    <input type="text" asp-for="Address" class="form-control" aria-required="false" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <label class="col-form-label" asp-for="State"></label>
                    <input type="text" asp-for="State" class="form-control" aria-required="false" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <label class="col-form-label" asp-for="Postcode"></label>
                    <input type="text" asp-for="Postcode" class="form-control" aria-required="false" />
                    <span asp-validation-for="Postcode" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <label class="col-form-label" asp-for="DateOfBirth"></label>
                    <input type="text" asp-for="DateOfBirth" class="form-control" aria-required="false" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>





                <div class="d-flex justify-content-center">
                    <button type="submit" class="w-40 btn btn-lg btn-primary">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>
