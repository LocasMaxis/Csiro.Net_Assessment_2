@model Csiro.ViewModels.RegisterViewModel

<div class="registration-box">
    <div class="row">
        <div class="col-12">
            <form method="post">
                <center>
                    <img width="150" src="/images/sign_up.png" />
                    <h2>Create a New Account</h2>
                </center>

                <hr />

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-floating mb-3">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <label asp-for="Gpa"></label>
                    <input asp-for="Gpa" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Gpa" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <br />

                <!-- Cover Letter -->
                <div class="form-floating mb-3">
                    <label asp-for="CoverLetter" class="control-label"></label>
                    <div>
                        <textarea asp-for="CoverLetter" class="form-control" rows="4" data-val="false"></textarea>
                        <span asp-validation-for="CoverLetter" class="text-danger"></span>
                    </div>
                </div>

                <!-- Resume -->
                <div class="form-floating mb-3">
                    <label asp-for="Resume" class="control-label"></label>
                    <div>
                        <textarea asp-for="Resume" class="form-control" rows="4" data-val="false"></textarea>
                        <span asp-validation-for="Resume" class="text-danger"></span>
                    </div>
                </div>

                <br />

                <!-- Dropdown for Course -->

                <div class="form-floating mb-3">
                    <label asp-for="courseID">Course</label>
                    <select asp-for="courseID" class="form-control">
                        <option value="">Select Course</option>
                        @foreach (var item in Model.courseList)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                    <span asp-validation-for="courseID" class="text-danger"></span>
                </div>
                <br />

                <!-- Dropdown for University -->
                <div class="form-floating mb-3">
                    <label asp-for="uniID">University</label>
                    <select asp-for="uniID" class="form-control">
                        <option value="">Select University</option>
                        @foreach (var item in Model.uniList)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                    <span asp-validation-for="uniID" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center">
                    <button id="registerSubmit" type="submit" class="w-40 btn btn-lg btn-primary">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>
